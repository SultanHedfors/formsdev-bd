<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">





    <changeSet id="001-create-work_schedule-table" author="your_name">
        <createTable tableName="work_schedule">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="year_month" type="VARCHAR(7)">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_month" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_ws_emp" references="employee(employee_id)"/>
            </column>
            <column name="substitute_employee_id" type="INTEGER">
                <constraints foreignKeyName="fk_ws_sub_emp" references="employee(employee_id)"/>
            </column>
            <column name="room_symbol" type="VARCHAR(50)"/>
            <column name="work_mode" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="work_start_time" type="VARCHAR(8)"/> <!-- Zamiast TIME -->
            <column name="work_end_time" type="VARCHAR(8)"/> <!-- Zamiast TIME -->
            <column name="work_duration_minutes" type="INTEGER"/>
        </createTable>

        <createIndex indexName="idx_ws_year_month" tableName="work_schedule">
            <column name="year_month"/>
        </createIndex>

        <createIndex indexName="idx_ws_emp" tableName="work_schedule">
            <column name="employee_id"/>
        </createIndex>

        <createIndex indexName="idx_ws_sub_emp" tableName="work_schedule">
            <column name="substitute_employee_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1-create-sequence-and-trigger" author="your-name">
        <!-- Create the sequence -->
        <createSequence sequenceName="gen_work_schedule_id4"/>

        <!-- Add a trigger for auto-generating ID -->
        <sql>
            CREATE OR ALTER TRIGGER bi_work_schedule FOR work_schedule
        ACTIVE BEFORE INSERT POSITION 0
        AS
            BEGIN
            IF (NEW.ID IS NULL) THEN
                NEW.ID = NEXT VALUE FOR gen_work_schedule_id4;
            END;
        </sql>
    </changeSet>


    <changeSet id="create-roles-table" author="yourname">
        <createTable tableName="ROLES">
            <column name="ROLE_NAME" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <!-- Insert predefined roles -->
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="ADMIN"/>
        </insert>
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="REASSIGN_ALLOWED"/>
        </insert>
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="DEFAULT"/>
        </insert>

    </changeSet>

    <changeSet id="drop-and-recreate-user-roles" author="yourname">

        <!-- Recreate USER_ROLES table with a foreign key -->
        <createTable tableName="USER_ROLES">
            <column name="USER_ID" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Key Constraint -->
        <addForeignKeyConstraint
                baseTableName="USER_ROLES"
                baseColumnNames="USER_ID"
                referencedTableName="EMPLOYEE"
                referencedColumnNames="EMPLOYEE_ID"
                constraintName="FK_USER_ROLES_EMPLOYEE"
                onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>