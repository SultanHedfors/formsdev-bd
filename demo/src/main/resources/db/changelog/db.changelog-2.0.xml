<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">




    <changeSet id="2-create-sequence-and-trigger" author="your-name">
        <!-- Create the sequence -->
        <createSequence sequenceName="gen_employee_id"/>

        <!-- Add a trigger for auto-generating ID -->
        <sql>
            CREATE OR ALTER TRIGGER bi_employee FOR employee
        ACTIVE BEFORE INSERT POSITION 0
        AS
            BEGIN
            IF (NEW.employee_id IS NULL) THEN
                NEW.employee_id = NEXT VALUE FOR gen_employee_id;
            END;
        </sql>
    </changeSet>


</databaseChangeLog>