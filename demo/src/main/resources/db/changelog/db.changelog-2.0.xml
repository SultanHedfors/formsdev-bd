<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">





    <changeSet id="001-create-work_schedule-table" author="your_name">
        <createTable tableName="work_schedule">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="year_month" type="VARCHAR(7)">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_month" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_ws_emp" references="employee(employee_id)"/>
            </column>
            <column name="substitute_employee_id" type="INTEGER">
                <constraints foreignKeyName="fk_ws_sub_emp" references="employee(employee_id)"/>
            </column>
            <column name="room_symbol" type="VARCHAR(50)"/>
            <column name="work_mode" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="work_start_time" type="VARCHAR(8)"/> <!-- Zamiast TIME -->
            <column name="work_end_time" type="VARCHAR(8)"/> <!-- Zamiast TIME -->
            <column name="work_duration_minutes" type="INTEGER"/>
        </createTable>

        <createIndex indexName="idx_ws_year_month" tableName="work_schedule">
            <column name="year_month"/>
        </createIndex>

        <createIndex indexName="idx_ws_emp" tableName="work_schedule">
            <column name="employee_id"/>
        </createIndex>

        <createIndex indexName="idx_ws_sub_emp" tableName="work_schedule">
            <column name="substitute_employee_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1-create-sequence-and-trigger" author="your-name">
        <!-- Create the sequence -->
        <createSequence sequenceName="gen_work_schedule_id4"/>

        <!-- Add a trigger for auto-generating ID -->
        <sql>
            CREATE OR ALTER TRIGGER bi_work_schedule FOR work_schedule
        ACTIVE BEFORE INSERT POSITION 0
        AS
            BEGIN
            IF (NEW.ID IS NULL) THEN
                NEW.ID = NEXT VALUE FOR gen_work_schedule_id4;
            END;
        </sql>
    </changeSet>


    <changeSet id="create-roles-table" author="yourname">
        <createTable tableName="ROLES">
            <column name="ROLE_NAME" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <!-- Insert predefined roles -->
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="ADMIN"/>
        </insert>
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="REASSIGN_ALLOWED"/>
        </insert>
        <insert tableName="ROLES">
            <column name="ROLE_NAME" value="DEFAULT"/>
        </insert>

    </changeSet>

    <changeSet id="drop-and-recreate-user-roles" author="yourname">

        <!-- Recreate USER_ROLES table with a foreign key -->
        <createTable tableName="USER_ROLES">
            <column name="USER_ID" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Key Constraint -->
        <addForeignKeyConstraint
                baseTableName="USER_ROLES"
                baseColumnNames="USER_ID"
                referencedTableName="EMPLOYEE"
                referencedColumnNames="EMPLOYEE_ID"
                constraintName="FK_USER_ROLES_EMPLOYEE"
                onDelete="CASCADE"/>

    </changeSet>



    <changeSet id="create-activity-assignment-log" author="your_name">

        <createTable tableName="activity_assignment_log">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="activity_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="employee_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="assigned_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- FOREIGN KEY: activity_id → zajecie.zajecie_id -->
        <addForeignKeyConstraint
                baseTableName="activity_assignment_log"
                baseColumnNames="activity_id"
                referencedTableName="zajecie"
                referencedColumnNames="zajecie_id"
                constraintName="fk_activity_assignment_activity"/>

        <!-- FOREIGN KEY: employee_id → employee.employee_id -->
        <addForeignKeyConstraint
                baseTableName="activity_assignment_log"
                baseColumnNames="employee_id"
                referencedTableName="employee"
                referencedColumnNames="employee_id"
                constraintName="fk_activity_assignment_employee"/>

    </changeSet>

    <changeSet id="add-generator-activity-assignment-log" author="your_name">
        <sql>
            CREATE SEQUENCE activity_assignment_log_seq;
        </sql>
    </changeSet>

    <changeSet id="add-trigger-activity-assignment-log" author="your_name">
        <sql>
            CREATE OR ALTER TRIGGER bi_activity_assignment_log
        FOR activity_assignment_log
        ACTIVE BEFORE INSERT POSITION 0
        AS
            BEGIN
            IF (NEW.id IS NULL) THEN
                NEW.id = NEXT VALUE FOR activity_assignment_log_seq;
            END
        </sql>
    </changeSet>

    <changeSet id="20250406-activity-assignment-log-employee" author="twoja_nazwa">
        <createTable tableName="act_assign_log_emp">
            <column name="activity_assignment_log_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="act_assign_log_emp"
                columnNames="activity_assignment_log_id, employee_id"
                constraintName="pk_act_assign_log_emp"/>

        <addForeignKeyConstraint
                baseTableName="act_assign_log_emp"
                baseColumnNames="activity_assignment_log_id"
                referencedTableName="activity_assignment_log"
                referencedColumnNames="id"
                constraintName="fk_act_assign_log"/>

        <addForeignKeyConstraint
                baseTableName="act_assign_log_emp"
                baseColumnNames="employee_id"
                referencedTableName="employee"
                referencedColumnNames="employee_id"
                constraintName="fk_act_emp"/>

    </changeSet>


    <changeSet id="20250406-add-activity-to-work-schedule" author="twoja_nazwa">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="work_schedule" columnName="activity_id"/>
            </not>
        </preConditions>

        <addColumn tableName="work_schedule">
            <column name="activity_id" type="INT"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="work_schedule"
                baseColumnNames="activity_id"
                referencedTableName="ZAJECIE"
                referencedColumnNames="ZAJECIE_ID"
                constraintName="fk_work_schedule_activity"/>
    </changeSet>

    <changeSet id="20250406-create-activity-employee" author="twoja_nazwa">
        <createTable tableName="activity_employee">
            <column name="activity_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="activity_employee"
                columnNames="activity_id, employee_id"
                constraintName="pk_activity_employee"/>

        <addForeignKeyConstraint
                baseTableName="activity_employee"
                baseColumnNames="activity_id"
                referencedTableName="ZAJECIE"
                referencedColumnNames="ZAJECIE_ID"
                constraintName="fk_activity_employee_activity"/>

        <addForeignKeyConstraint
                baseTableName="activity_employee"
                baseColumnNames="employee_id"
                referencedTableName="EMPLOYEE"
                referencedColumnNames="EMPLOYEE_ID"
                constraintName="fk_activity_employee_employee"/>
    </changeSet>
    <changeSet id="20250409-add-id-and-user-modified-to-activity-employee" author="twoja_nazwa">

        <!-- Dodaj kolumnę ID -->
        <addColumn tableName="activity_employee">
            <column name="id" type="INTEGER"/>
        </addColumn>

        <!-- Dodaj kolumnę user_modified -->
        <addColumn tableName="activity_employee">
            <column name="user_modified" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Utwórz sekwencję dla ID -->
        <createSequence sequenceName="activity_employee_seq"/>

        <!-- Dodaj trigger dla auto-generowania ID -->
        <sql>
            CREATE OR ALTER TRIGGER bi_activity_employee
        FOR activity_employee
        ACTIVE BEFORE INSERT POSITION 0
        AS
            BEGIN
            IF (NEW.id IS NULL) THEN
                NEW.id = NEXT VALUE FOR activity_employee_seq;
            END
        </sql>

        <!-- (Opcjonalnie) Dodaj unikalny index dla kolumny ID -->
        <createIndex tableName="activity_employee" indexName="idx_activity_employee_id" unique="true">
            <column name="id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>