pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                dir('/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service') {
                    git branch: 'main', url: 'https://github.com/ktadiallo/formsdev-bd.git'
                }
                dir('/home/boii/Desktop/proj/stats-app-fe') {
                    git branch: 'main', url: 'https://github.com/SultanHedfors/stats-app-fe.git'
                }
                dir('/home/boii/Desktop/proj/schedule-report-kafka-producer') {
                    git branch: 'master', url: 'https://github.com/SultanHedfors/schedule-report-kafka-producer.git'
                }
                dir('/home/boii/Desktop/proj/notification-sender') {
                    git branch: 'master', url: 'https://github.com/SultanHedfors/notification-sender.git'
                }
            }
        }

        stage('Lint & Test BE') {
            parallel {
                stage('stats-app-main-be-service') {
                    steps {
                        dir('/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service') {
                            sh 'mvn checkstyle:check'
                            sh 'mvn clean package'
                            sh 'mvn jacoco:report'
                            sh 'mvn org.owasp:dependency-check-maven:check'
                        }
                    }
                }
                stage('schedule-report-kafka-producer') {
                    steps {
                        dir('/home/boii/Desktop/proj/schedule-report-kafka-producer') {
                            sh 'mvn checkstyle:check'
                            sh 'mvn clean package'
                            sh 'mvn jacoco:report'
                            sh 'mvn org.owasp:dependency-check-maven:check'
                        }
                    }
                }
                stage('notification-sender') {
                    steps {
                        dir('/home/boii/Desktop/proj/notification-sender') {
                            sh 'mvn checkstyle:check'
                            sh 'mvn clean package'
                            sh 'mvn jacoco:report'
                            sh 'mvn org.owasp:dependency-check-maven:check'
                        }
                    }
                }
            }
        }

        stage('Build FE') {
            steps {
                dir('/home/boii/Desktop/proj/stats-app-fe') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Images') {
            parallel {
                stage('BE images') {
                    steps {
                        dir('/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service') {
                            sh 'docker build -t stats-app-main-be-service:latest .'
                        }
                        dir('/home/boii/Desktop/proj/schedule-report-kafka-producer') {
                            sh 'docker build -t schedule-report-kafka-producer:latest .'
                        }
                        dir('/home/boii/Desktop/proj/notification-sender') {
                            sh 'docker build -t notification-sender:latest .'
                        }
                    }
                }
                stage('FE image') {
                    steps {
                        dir('/home/boii/Desktop/proj/stats-app-fe') {
                            sh 'docker build -t stats-app-fe:latest .'
                        }
                    }
                }
            }
        }

        stage('Docker Compose Up') {
            steps {
                dir('/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service') {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
    post {
        always {
            junit '/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service/target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '/home/boii/IdeaProjects/formsdev-bd/stats-app-main-be-service/target/*.jar', fingerprint: true
        }
        success {
            echo 'Build i testy OK!'
        }
        failure {
            echo 'Coś nie działa, sprawdź logi.'
        }
    }
}
